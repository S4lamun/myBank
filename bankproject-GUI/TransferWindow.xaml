<Window x:Class="bankproject_GUI.TransferWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Transfer Money" Height="300" Width="400"
        ResizeMode="NoResize">
    <Grid>
        <Label Content="Current Balance:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="BalanceTextBox" IsReadOnly="True" HorizontalAlignment="Left" Margin="120,10,0,0" VerticalAlignment="Top" Width="200"/>

        <Label Content="Recipient Account:" HorizontalAlignment="Left" Margin="10,50,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="RecipientAccountTextBox" HorizontalAlignment="Left" Margin="120,50,0,0" VerticalAlignment="Top" Width="200"/>

        <Label Content="Transfer Amount:" HorizontalAlignment="Left" Margin="10,90,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="TransferAmountTextBox" HorizontalAlignment="Left" Margin="120,90,0,0" VerticalAlignment="Top" Width="200"/>

        <Button Content="Transfer" HorizontalAlignment="Left" Margin="120,140,0,0" VerticalAlignment="Top" Width="75" Click="TransferButton_Click"/>
        <Button Content="Cancel" HorizontalAlignment="Left" Margin="200,140,0,0" VerticalAlignment="Top" Width="75" Click="CancelButton_Click"/>

    </Grid>
</Window>
