<Window x:Class="bankproject_GUI.AddBankEmployeeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Bank Employee" Height="421" Width="400"
        ResizeMode="NoResize">
    <StackPanel Orientation="Vertical" Margin="10">
        <TextBlock Text="Add New Bank Employee" TextAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold" Margin="0,10,0,5" Background="#FF8AAAE5" FontSize="16" Width="344"/>

        <!-- Name -->
        <TextBox x:Name="NameTextBox" Margin="0,5" ToolTip="Enter the name" />
        <TextBlock Text="Name" Margin="0,0,0,5" Foreground="Gray" FontSize="10"/>

        <!-- Surname -->
        <TextBox x:Name="SurnameTextBox" Margin="0,5" ToolTip="Enter the surname" />
        <TextBlock Text="Surname" Margin="0,0,0,5" Foreground="Gray" FontSize="10"/>

        <!-- Pesel -->
        <TextBox x:Name="PeselTextBox" Margin="0,5" ToolTip="Enter the pesel" />
        <TextBlock Text="Pesel" Margin="0,0,0,5" Foreground="Gray" FontSize="10"/>

        <!-- Sex -->
        <ComboBox x:Name="SexComboBox" Margin="0,5" ToolTip="Select the sex">
            <ComboBoxItem Content="Male" Tag="M"/>
            <ComboBoxItem Content="Female" Tag="K"/>
        </ComboBox>
        <TextBlock Text="Sex" Margin="0,0,0,5" Foreground="Gray" FontSize="10"/>

        <!-- Employee ID -->
        <TextBox x:Name="EmployeeIDTextBox" Margin="0,5" ToolTip="Enter the employee ID" />
        <TextBlock Text="Employee ID" Margin="0,0,0,5" Foreground="Gray" FontSize="10"/>

        <!-- Password -->
        <PasswordBox x:Name="PasswordBox" Margin="0,5" ToolTip="Enter the password" />
        <TextBlock Text="Password" Margin="0,0,0,5" Foreground="Gray" FontSize="10"/>

        <!-- Add Button -->
        <Button Content="Add Employee" Click="AddEmployeeButton_Click" Background="#FF8AAAE5" Margin="0,10"/>
    </StackPanel>
</Window>
