<Page x:Class="bankproject_GUI.AboutPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:bankproject_GUI"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AboutPage"
      Background="DodgerBlue">

    <Grid Margin="20">
        <StackPanel>
            <TextBlock x:Name="Text1Block" TextWrapping="Wrap" FontSize="16" FontWeight="Bold" Foreground="White" Margin="0,0,0,10"/>
            <TextBlock x:Name="Text2Block" TextWrapping="Wrap" FontSize="16" FontWeight="Bold" Foreground="White" Margin="0,0,0,10"/>
            <TextBlock x:Name="Text3Block" TextWrapping="Wrap" FontSize="16" FontWeight="Bold" Foreground="White" Margin="0,0,0,20"/>

            <Button Content="Back" HorizontalAlignment="Center" Width="150" Height="50" Background="White" Foreground="DodgerBlue" Click="BackButton_Click"/>
        </StackPanel>
    </Grid>
</Page>
