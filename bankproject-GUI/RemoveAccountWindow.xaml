<Window x:Class="bankproject_GUI.RemoveAccountWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Remove Account" Height="200" Width="300"
        ResizeMode="NoResize">
    <Grid>
        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0" Text="PESEL:"/>
        <TextBox x:Name="PeselTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="80,10,10,0" Height="25" Width="180"/>

        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,50,0,0" Text="Password:"/>
        <PasswordBox x:Name="PasswordBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="80,50,10,0" Height="25" Width="180"/>

        <Button x:Name="RemoveAccountButton" Content="Remove Account" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Height="30" Margin="90,100,0,0" Click="RemoveAccountButton_Click"/>
    </Grid>
</Window>
